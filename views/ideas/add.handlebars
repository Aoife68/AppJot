<div class="card card-body">
  <h3>Application Idea</h3>
  <form action="/ideas" method="post">
    <div class="form-group">
      <label for="title">Title *</label>
      <br><input type="text" class"form-control" name="title" required>
    </div>
    <div class="form-group">
      <label for="details">Details *</label><br>
      <textarea class"form-control " name="details" required></textarea>
    </div>
    <div class="form-group">
      <label for="points">Focal Points *</label><br>
      <input type="text" class"form-control " name="points" required>
      <button id="btnName">Add Focal Point</button>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>